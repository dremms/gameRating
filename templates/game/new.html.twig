{% extends 'base.html.twig' %}

{% block title %}Ajouter un jeu{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="box">
            <!-- Titre -->
            <h1 class="title is-3 has-text-centered">âž• Ajouter un jeu</h1>

            <!-- Info IGDB -->
            <div class="notification is-info is-light mb-4">
                <strong>ðŸ’¡ Astuce :</strong> Allez chercher l'ID du jeu sur
                <a href="https://www.igdb.com/" target="_blank">IGDB</a> et collez-le ici.
            </div>

            <!-- Formulaire -->
            {{ form_start(form, { 'attr': { 'class': 'mb-4' } }) }}
            <div class="field">
                {{ form_label(form.igdbId, null, { 'label_attr': {'class': 'label'} }) }}
                <div class="control">
                    {{ form_widget(form.igdbId, { 'attr': {'class': 'input'} }) }}
                </div>
                <p class="help">Exemple : <em>123456</em></p>
            </div>

            <div class="field mt-4">
                <div class="control">
                    <button class="button">ðŸ“¥ Importer le jeu</button>
                </div>
            </div>
            {{ form_end(form) }}

            <!-- Flash messages -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="notification is-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
