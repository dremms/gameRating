{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>

            <tr>
                <th>Description</th>
                <td>{{ game.summary }}</td>
            </tr>
            <tr>
                <th>CoverImage</th>
                <td><img
                            src="{{ asset('uploads/games/' ~ game.coverImage) }}"
                            alt="{{ game.title }}"
                            style="max-height: 150px;"
                    ></td>
            </tr>
        </tbody>
    </table>

    <button><a href="{{ path('app_game_index') }}">Retour Ã  la liste</a></button>

